{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": ["error", { "allow": ["info", "warn", "error", "table"] }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}